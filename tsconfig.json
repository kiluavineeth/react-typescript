    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "*": ["src/*"]
        },
        "jsx": "react",
        "sourceMap": true,
        "module": "commonjs",
        "noImplicitAny": true,
        "outDir": "build",
        "preserveConstEnums": true,
        "removeComments": true,
        "target": "es5"        
    },
    "exclude": [
        "node_modules"
    ]
}